.block.notice
  %h3 Status 
  .content
    %p= "Zones: #{@total_zones}"
    %p= "Expired: #{@total_expired}"
    - if @zones
      %p= link_to "Show all", "#{request.url}&show=all" 
.block
  %h3 Links
  %ul.navigation
    %li
      -if @zone.present? && !@zone.new_record?
        %a{:href => @zone.wwwhost, :target => "_blank"}= @zone.wwwhost 
      -else
        %a{:href => app_home_url, :target => "_blank"}= app_name
