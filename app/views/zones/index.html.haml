=form_tag(zones_path, :method => "delete") do
  #submit{:class=>'r'}= submit_tag "Delete Selected Zones"
  %table.tablesorter
    %thead
      %tr
        %th= check_box_tag "select_all", "1", false, :id => 'select_all', :class => 'zone_id'
        %th Zone
        %th Active
        %th Records
        %th Edit
        %th Delete
        %th Clone
    %tbody
      - @zones.each do |z|
        %tr
          %td= check_box_tag "zone_ids[]", z.id, false, :class => 'zone_ids'
          %td= link_to z.origin, zone_path(z.id)
          %td= z.active_or_not
          %td= z.records.count
          %td= link_to "Edit", edit_zone_path(z.id)
          %td= link_to "Delete", zone_path(:id => z.id), :method => :delete, :confirm => 'Are you sure?'
          %td= link_to "Clone", clone_zone_path(z.id)

= link_to "Create New Zone", new_zone_path

%p= "Total number of zones: #{@zones.count}"
