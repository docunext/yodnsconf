=form_tag(zones_path, :method => "delete") do
  %button.r= link_to "New Zone", new_zone_path
  %table.table
    %thead
      %tr
        %th= check_box_tag "select_all", "1", false, :id => 'select_all', :class => 'zone_id'
        %th Zone
        %th Active
        %th Records
        %th 
    %tbody
      - @zones.each do |z|
        %tr{:class => cycle("even", "odd")}
          %td= check_box_tag "zone_ids[]", z.id, false, :class => 'zone_ids'
          %td= link_to z.origin, zone_path(z.id)
          %td= z.active_or_not
          %td= z.records.count
          %td.last
            = link_to "Edit", edit_zone_path(z.id)
            = link_to "Delete", zone_path(:id => z.id), :method => :delete, :confirm => 'Are you sure?'
            = link_to "Clone", clone_zone_path(z.id)

.actions-bar.wat-cf
  .actions
  #submit.r= submit_tag "Delete Selected Zones"
    

  %p= will_paginate @zones
  %p= "Total number of zones: #{Zone.total}"
