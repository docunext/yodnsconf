<map:sitemap xmlns:map="http://www.nexista.org/sitemap">
	<map:prepend>
		<map:perl src="lib/perl/runtime.pl"/>
		<map:script src="lib/php/runtime.php"/>
		<map:xml src="data/xml/main_menu.xml"/>
		<map:xml src="i18n/en_US/yodnsconf.xml"/>
		<map:set name="theme" value="default"/>
	</map:prepend>

	<map:gate name="index" role="yodnsuser" cache="600" client_cache="300">
		<map:if name="//_get/origin">
			<map:true>
				<map:action type="concat" params="%,{//_get/origin},//_get/origin"/>
				<map:action type="concat" params="{//_get/origin},%,//_get/origin"/>
			</map:true>
			<map:false></map:false>
		</map:if>
		<map:query src="data/sql/zones_get_all.xml"/>
		<map:xsl src="templates/xsl/zones.xsl"/>
	</map:gate>

	<map:gate name="x-zones-export" content_type="text/plain">
		<map:action type="header" params="Content-Type,text/plain"/>
		<map:query src="data/sql/zones_get_all.xml"/>
		<map:xsl src="templates/txt/zones_export_all.txt.xsl"/>
	</map:gate>
	<map:gate name="x-zones-export-bind" content_type="text/plain">
		<map:action type="header" params="Content-Type,text/plain"/>
		<map:query src="data/sql/zones_get_all.xml"/>
		<map:xsl src="templates/txt/zones_export_all_bind.txt.xsl"/>
	</map:gate>
	<map:gate name="x-zones-export-csv" content_type="text/plain">
		<map:action type="header" params="Content-Type,text/plain"/>
		<map:query src="data/sql/zones_get_all.xml"/>
		<map:xsl src="templates/txt/zones_export_csv.txt.xsl"/>
	</map:gate>

	<map:gate name="x-zones-download" content_type="text/plain">
		<map:action type="header" params="Content-Type,text/plain"/>
		<map:query src="data/sql/zones_get_all.xml"/>
		<map:xsl src="templates/txt/zones_download_all.txt.xsl"/>
	</map:gate>

	<map:gate name="zone-edit" role="yodnsuser">
		<map:switch name="//_post/action">
			<map:case value="edit">
				<map:plugin type="serial" params="//_post/serial"/>
				<map:query src="data/sql/zone_update.xml"/>
				<map:action type="redirect" params="{//link_prefix}zone-edit&amp;zone={//_post/zone}"/>
			</map:case>
			<map:case value="create">
				<map:plugin type="serial" params="//_post/serial"/>
				<map:query src="data/sql/zone_create.xml"/>
				<map:action type="redirect" params="{//link_prefix}index"/>
			</map:case>
			<map:default></map:default>
		</map:switch>
		<map:query src="data/sql/zone_get_by_id.xml"/>
		<map:query src="data/sql/records_get_by_zone_id.xml"/>
		<map:xsl src="templates/xsl/zone_edit.xsl"/>
	</map:gate>

	<map:gate name="zone-clone" role="yodnsuser">
		<map:if name="//_post">
			<map:true>
				<map:query src="data/sql/zone_create.xml"/>
				<map:query src="data/sql/zone_get_by_origin.xml"/>
				<map:query src="data/sql/records_get_by_zone_id_to_clone.xml"/>
				<map:query src="data/sql/zone_clone.xml"/>
				<map:action type="redirect" params="{//link_prefix}index"/>
			</map:true>
			<map:false>
				<map:query src="data/sql/zone_get_by_id.xml"/>
				<map:query src="data/sql/records_get_by_zone_id.xml"/>
				<map:xsl src="templates/xsl/zone_clone.xsl"/>
			</map:false>
		</map:if>
	</map:gate>

	<map:gate name="x-zone-export" content_type="text/plain">
		<map:action type="header" params="Content-Type,text/plain"/>
		<map:query src="data/sql/zone_get_by_id.xml"/>
		<map:query src="data/sql/records_get_by_zone_id.xml"/>
		<map:xsl src="templates/txt/zone_export.txt.xsl"/>
	</map:gate>

	<map:gate name="x-zone-delete" role="yodnsuser">
		<map:query src="data/sql/zone_delete.xml"/>
	</map:gate>

	<map:gate name="redirects" role="yodnsuser" cache="600" client_cache="300">
		<map:query src="data/sql/redirects_get_all.xml"/>
		<map:xsl src="templates/xsl/redirects.xsl"/>
	</map:gate>
	<map:gate name="redirect-edit" role="yodnsuser" cache="600" client_cache="300">
		<map:if name="//_post/http_host">
			<map:true>
				<map:query src="data/sql/redirect_delete.xml"/>
				<map:query src="data/sql/redirect_create.xml"/>
				<map:action type="redirect" params="{//link_prefix}redirects"/>
			</map:true>
		</map:if>
		<map:query src="data/sql/redirects_get_all.xml"/>
		<map:xsl src="templates/xsl/redirect_edit.xsl"/>
	</map:gate>
	<map:gate name="x--redirects-export" role="yodnsuser">
		<map:action type="header" params="Content-Type,text/plain"/>
		<map:query src="data/sql/redirects_get_all.xml"/>
		<map:action type="pad" params="//redirects_get_all/redirects_get_all/http_host,30, "/>
		<map:xsl src="templates/xsl/redirects_export.xsl"/>
	</map:gate>
	<map:gate name="x--redirect-delete" role="yodnsuser">
		<map:action type="header" params="Content-Type,text/xml"/>
		<map:query src="data/sql/redirect_delete.xml"/>
	</map:gate>

	<map:gate name="records" role="yodnsuser">
		<map:xml src="config/default_zone_records.xml"/>
		<map:xml src="config/zone_profile_sample.xml"/>
		<map:query src="data/sql/zone_get_profiles.xml"/>
		<map:if name="//_get/origin">
			<map:true>
				<map:action type="concat" params="%,{//_get/name},//_get/name"/>
				<map:action type="concat" params="{//_get/name},%,//_get/name"/>
			</map:true>
		</map:if>
		<map:xml src="data/xml/dns_record_types.xml"/>
		<map:query src="data/sql/zone_get_by_id.xml"/>
		<map:query src="data/sql/records_get_by_zone_id.xml"/>
		<map:xsl src="templates/xsl/records.xsl"/>
	</map:gate>

	<map:gate name="record-edit" role="yodnsuser">
		<map:switch name="//_post/action">
			<map:case value="edit">
				<map:plugin type="serial" params="//_post/serial"/>
				<map:query src="data/sql/record_update.xml"/>
				<map:query src="data/sql/zone_serial_update.xml"/>
				<map:action type="redirect" params="{//link_prefix}records&amp;zone={//_post/zone}"/>
			</map:case>
			<map:case value="create">
				<map:plugin type="serial" params="//_post/serial"/>
				<map:query src="data/sql/record_create.xml"/>
				<map:query src="data/sql/zone_serial_update.xml"/>
				<map:action type="redirect" params="{//link_prefix}records&amp;zone={//_post/zone}"/>
			</map:case>
			<map:default></map:default>
		</map:switch>
		<map:xml src="data/xml/dns_record_types.xml"/>
		<map:query src="data/sql/zone_get_by_id.xml"/>
		<map:query src="data/sql/record_get_by_id.xml"/>
		<map:xsl src="templates/xsl/record_edit.xsl"/>
	</map:gate>
	<map:gate name="x-record-delete" role="yodnsuser">
		<map:query src="data/sql/record_delete.xml"/>
		<map:query src="data/sql/zone_get_by_id.xml"/>
		<map:plugin type="serial" params="{//zone_get_by_id/serial}"/>
		<map:query src="data/sql/zone_serial_update.xml"/>
	</map:gate>

	<map:gate name="zone-create-default-dns-records" role="yodnsuser">
		<map:if name="//_post">
			<map:true>
				<map:xml src="config/default_zone_records.xml"/>
				<map:query src="data/sql/zone_create_default_dns_records.xml"/>
				<map:plugin type="serial" params="//_post/serial"/>
				<map:query src="data/sql/zone_serial_update.xml"/>
			</map:true>
		</map:if>
	</map:gate>
	<map:gate name="zone-apply-profile" role="yodnsuser">
		<map:if name="//_post">
			<map:true>
				<map:query src="data/sql/records_get_by_profile_id.xml"/>
				<map:query src="data/sql/zone_apply_profile.xml"/>
				<map:plugin type="serial" params="//_post/serial"/>
				<map:query src="data/sql/zone_serial_update.xml"/>
			</map:true>
		</map:if>
		<map:action type="redirect" params="{//link_prefix}records&amp;zone={//_post/zone}"/>
	</map:gate>

	<map:gate name="zone-create-default-a-records" role="yodnsuser">
		<map:if name="//_post">
			<map:true>
				<map:xml src="config/default_zone_records.xml"/>
				<map:query src="data/sql/zone_create_default_a_records.xml"/>
				<map:plugin type="serial" params="//_post/serial"/>
				<map:query src="data/sql/zone_serial_update.xml"/>
			</map:true>
			<map:false></map:false>
		</map:if>
	</map:gate>



	<map:gate name="hosts" role="yodnsuser" cache="600" client_cache="300">
		<map:query src="data/sql/hosts_get_all.xml"/>
		<map:xsl src="templates/xsl/hosts.xsl"/>
	</map:gate>
	<map:gate name="host-edit" role="yodnsuser">
		<map:block name="ptr_record">
			<map:if name="//_post/create_ptr_record">
				<map:true>
					<map:plugin type="ptr" params="//_post/ip"/>
					<map:query src="data/sql/host_delete_ptr.xml"/>
					<map:query src="data/sql/host_create_ptr.xml"/>
				</map:true>
				<map:false>
				</map:false>
			</map:if>
		</map:block>
		<map:if name="//_post/clone">
			<map:true>
				<map:query src="data/sql/host_create.xml"/>
				<map:action type="redirect" params="{//link_prefix}hosts"/>
			</map:true>
			<map:false>
			</map:false>
		</map:if>
		<map:if name="//_post/host_id">
			<map:true>
				<map:query src="data/sql/host_update.xml"/>
				<map:action type="redirect" params="{//link_prefix}hosts"/>
			</map:true>
			<map:false></map:false>
		</map:if>
		<map:query src="data/sql/hosts_get_all.xml"/>
		<map:xsl src="templates/xsl/host_form.xsl"/>
	</map:gate>
	<map:gate name="host-create" role="yodnsuser">
		<map:insert name="ptr_record"/>
		<map:if name="//_post">
			<map:true>
				<map:query src="data/sql/host_create.xml"/>
				<map:action type="redirect" params="{//link_prefix}hosts"/>
			</map:true>
			<map:false></map:false>
		</map:if>
		<map:xsl src="templates/xsl/host_form.xsl"/>
	</map:gate>
	<map:gate name="x--hosts-export" content_type="text/plain">
		<map:action type="header" params="Content-Type,text/plain"/>
		<map:query src="data/sql/hosts_get_distinct_ip.xml"/>
		<map:query src="data/sql/hosts_get_all.xml"/>
		<map:action type="pad" params="//hosts_get_distinct_ip/hosts_get_distinct_ip/ip,16, "/>
		<map:xsl src="templates/txt/hosts_export.txt.xsl"/>
	</map:gate>
	<map:gate name="x--hosts-export-unbound" content_type="text/plain">
		<map:action type="header" params="Content-Type,text/plain"/>
		<map:query src="data/sql/hosts_get_all.xml"/>
		<map:xsl src="templates/txt/hosts_export_unbound.txt.xsl"/>
	</map:gate>
	<map:gate name="x--hosts-export-nagios" content_type="text/plain">
		<map:action type="header" params="Content-Type,text/plain"/>
		<map:query src="data/sql/hosts_get_distinct_ip.xml"/>
		<map:query src="data/sql/hosts_get_all.xml"/>
		<map:action type="pad" params="//hosts_get_distinct_ip/hosts_get_distinct_ip/ip,16, "/>
		<map:xsl src="templates/txt/hosts_export_nagios3.txt.xsl"/>
	</map:gate>
	<map:gate name="x--hosts-export-puppet" content_type="text/plain">
		<map:action type="header" params="Content-Type,text/plain"/>
		<map:query src="data/sql/hosts_get_distinct_ip.xml"/>
		<map:query src="data/sql/hosts_get_all.xml"/>
		<map:action type="pad" params="//hosts_get_distinct_ip/hosts_get_distinct_ip/ip,16, "/>
		<map:xsl src="templates/txt/hosts_export_puppet.txt.xsl"/>
	</map:gate>
	<map:gate name="x--host-delete" role="yodnsuser">
		<map:action type="header" params="Content-Type,text/xml"/>
		<map:if name="//_post/host_id">
			<map:true>
				<map:query src="data/sql/host_delete.xml"/>
			</map:true>
		</map:if>
	</map:gate>


	<map:gate name="ip" role="yodnsuser" cache="600" client_cache="300">
		<map:xsl src="templates/xsl/ip_addresses.xsl"/>
	</map:gate>

	<map:gate name="services" role="yodnsuser">
		<map:query src="data/sql/services_get_all.xml"/>
		<map:xsl src="templates/xsl/services.xsl"/>
	</map:gate>
	<map:gate name="service-edit" role="yodnsuser">
		<map:if name="//_post/clone">
			<map:true>
				<map:query src="data/sql/service_create.xml"/>
				<map:action type="redirect" params="{//link_prefix}services"/>
			</map:true>
			<map:false>
			</map:false>
		</map:if>
		<map:if name="//_post/service_id">
			<map:true>
				<map:query src="data/sql/service_update.xml"/>
				<map:action type="redirect" params="{//link_prefix}services"/>
			</map:true>
			<map:false></map:false>
		</map:if>
		<map:if name="//_post/name">
			<map:true>
				<map:query src="data/sql/service_create.xml"/>
				<map:action type="redirect" params="{//link_prefix}services"/>
			</map:true>
			<map:false></map:false>
		</map:if>
		<map:query src="data/sql/services_get_all.xml"/>
		<map:xsl src="templates/xsl/service_form.xsl"/>
	</map:gate>


	<map:gate name="yodns-groups-and-tags" role="yodnsuser">
		<map:xsl src="templates/xsl/groups_and_tags.xsl"/>
	</map:gate>


	<map:gate name="tools-query" role="yodnsuser">
		<map:plugin type="net_dns" params="{//_get/hostname},{//defaults/dig_target},{//_get/type}"/>
		<map:xsl src="templates/xsl/tools_query.xsl"/>
	</map:gate>

	<map:gate name="tools-report" role="yodnsuser">
		<map:plugin type="net_dns" params="{//_get/hostname},{//defaults/dig_target},{//_get/type}"/>
		<map:xsl src="templates/xsl/tools_report.xsl"/>
	</map:gate>


	<map:gate name="yodns-options" role="yodnsuser">
		<map:set name="option_set" value="options_profiles"/>
		<map:xml src="data/xml/yodns_options.xml"/>
		<map:if name="//_post">
			<map:true>
				<map:query src="data/sql/option_delete.xml"/>
				<map:query src="data/sql/option_update.xml"/>
				<map:action type="redirect" params="{//link_prefix}sr-options"/>
			</map:true>
			<map:false></map:false>
		</map:if>
		<map:query src="data/sql/option_get.xml"/>
		<map:xsl src="templates/xsl/yodns_options.xsl"/>
	</map:gate>

	<map:gate name="iframe-viewer" cache="0">
		<map:xsl src="templates/xsl/iframe_viewer.xsl"/>
	</map:gate>

	<map:gate name="themed-css" cache="0">
		<map:action type="header" params="Content-Type,text/css"/>
		<map:raw src="templates/themes/{//theme}/css/style.css" />
	</map:gate>
	<map:gate name="dynamic-css"
			cache="600"
			nosession="true"
			content_type="text/css"
			cache_control="public, max-age=600, must-revalidate">
		<map:action type="header" params="Content-Type,text/css"/>
		<map:xsl src="templates/css/dynamic.css.xsl"/>
	</map:gate>
	<map:gate name="license" cache="0">
		<map:action type="header" params="Content-Type,text/plain"/>
		<map:raw src="LICENSE" />
	</map:gate>
	<map:gate name="dynamic-database-model">
		<map:set name="engine" value="mysqli"/>
		<map:action type="header" params="Content-type,text/plain"/>
		<map:xsl src="data/model/yodnsconf.sql.xsl"/>
	</map:gate>
	<map:gate name="x--sitetest" content_type="text/plain" cache="0">
		<map:action type="header" params="Content-type,text/plain"/>
		<map:xml src="sitemap.xml"/>
		<map:xsl src="templates/txt/sitetest.txt.xsl"/>
	</map:gate>
</map:sitemap>
