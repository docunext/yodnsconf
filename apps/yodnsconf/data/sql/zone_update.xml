<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="soa_get_by_id">
    <connection>&connection;</connection>
    <params>
        <param name="//_post/origin" type="text"/>
        <param name="//_post/ns" type="text"/>
        <param name="//_post/mbox" type="text"/>
        <param name="//_post/refresh" type="integer"/>
        <param name="//_post/retry" type="integer"/>
        <param name="//_post/minimum" type="integer"/>
        <param name="//_post/ttl" type="integer"/>
        <param name="//_post/active" type="text"/>
        <param name="//_post/xfer" type="integer"/>
        <param name="//_post/zone" type="integer"/>
	</params>
    <sql>
        UPDATE &prefix;soa 
        SET origin=?, ns=?, mbox=?, refresh=?, retry=?, minimum=?,ttl=?,active=?,xfer=?
        WHERE id = ? 
    </sql>
</query>
