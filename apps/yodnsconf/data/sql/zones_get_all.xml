<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="zones_get_all">
  <connection>&connection_read;</connection>
  <params>
    <param name="_get/origin" type="text" default="%"/>
    <param name="_get/ns_filter" type="text" default="%"/>
  </params>
  <sql>
    SELECT id, origin, ns, active, ttl
    FROM &prefix;soa
    WHERE
    origin LIKE ?
    AND ns LIKE ?
    ORDER BY origin
  </sql>
</query>
